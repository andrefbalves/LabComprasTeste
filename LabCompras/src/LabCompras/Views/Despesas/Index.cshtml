@model List<LabCompras.Models.Despesa>

@{
    ViewData["Title"] = "Despesas";
}

<h1>@ViewData["Title"]</h1>

@if (Model.Count == 0)
{
    <p>Sem despesas :D</p>
}
else
{
    @foreach (LabCompras.Models.Despesa despesa in Model)
    {
        <div class="jumbotron text-center">
            <p>Nome da Despesa: @despesa.NomeDespesa 
              Quantidade: @despesa.Quantidade
               Valor: @despesa.Valor
               Categoria: @despesa.Categoria
            
                   Pago?

                @if (despesa.Pago)
                {
                    @:Sim
    }
                else
                {
                    @:Não
    }
            </p>
        </div>
    }
}
<a asp-action="NovaDespesa" class="btn btn-primary"><span class="glyphicon glyphicon-plus"></span>Despesa</a>
<a asp-action="ClearDespesa" class="btn btn-danger"><span class="glyphicon glyphicon-alert"></span>Eliminar Despesas</a>